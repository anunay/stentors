<div id="blockBannerImageFeatured">
    <div class="blockImages">
        <?php foreach ($this->imgFeat as $image): ?>
            <div class="imgContainer">
                <p class="topPart">
                    <?php
                    $prefix = $this->imgCfg['medium']['maxWidth'] . 'x';
                    $prefix .= $this->imgCfg['medium']['maxHeight'] . '_';
                    if (!empty($image['IF_Img']))
                    {
                        $path = $this->imgPath . $prefix . $image['IF_Img'];
                        
                        echo $this->link(
