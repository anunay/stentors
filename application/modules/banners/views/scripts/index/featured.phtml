                            $this->image($path), 
                            array('class' => 'imageFeatured')
                        );
                    }
                    else
                    {
                        $alt = $image['IFI_Label'];
                        echo $this->link(
                            $image['IFI_Url'], 
                            $this->clientImage('noPic_174x207.jpg', array('alt' => $alt))
                        );
                    }
                    ?>
                </p>
                <p class="bottomPart">
                    <?php
                    $label = '&nbsp;';
                    if (!empty ($image['IFI_Label']))
                        $label = $image['IFI_Label'];
                    echo $this->link(
                        $image['IFI_Url'], 
                        $image['IFI_Label'],
                        array('class' => $image['IF_Style'])
                    );
                    ?>
                </p>
            </div>
        <?php endforeach; ?>
